<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#FFFFFF"
    android:layout_marginTop="90dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/Ques_name"
        android:text="You Asked:"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="6dip"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:id="@+id/Ques"
        android:textColor="#317FDF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/q_date"
        android:paddingTop="6dip"
        android:layout_gravity="right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Ans"
        android:textSize="14sp"
        android:paddingTop="6dip"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/a_date"
        android:paddingTop="6dip"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tag"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/edit_ques"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_delete_button"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_ques"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:background="@drawable/edit_delete_button"/>


</LinearLayout>